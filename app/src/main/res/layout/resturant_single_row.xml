<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="6">

        <ImageView
            android:id="@+id/imgFoodImage"
            android:layout_margin="6dp"
            android:layout_width="0dp"
            android:padding="5dp"

            android:layout_height="130dp"
            android:layout_weight="1.9"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_weight="2.9"
            android:layout_width="0dp"
            android:layout_height="140dp">

            <TextView
                android:id="@+id/txtFoodItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:text="Food Item"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtFoodRate"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="280 per person"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/txtFoodItem"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:padding="10dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

           <ImageButton
               android:id="@+id/imgHeart"
               android:layout_width="match_parent"
               android:background="#fff"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_hollow_heart"
               android:layout_margin="20dp"
               app:tint="#DA0037" />

            <TextView
                android:id="@+id/txtFoodRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textColor="#C490E4"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@id/imgHeart"/>
        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>