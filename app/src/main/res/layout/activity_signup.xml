<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e92c0c"
    tools:context=".activity.ActivitySignup">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="#fb4c0d"
            app:layout_scrollFlags="scroll|enterAlways"/>

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name (Min 3 characters)"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:inputType="text"
        android:background="#ffffff"
        android:textColorHint="#808080"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="5dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="#ffffff"
        android:textColorHint="#808080"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/txtMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:inputType="number"
        android:maxLength="10"
        android:drawableLeft="@drawable/ic_mobile_number"
        android:drawablePadding="5dp"
        android:hint="Mobile Number (10 Digits)"
        android:background="#ffffff"
        android:textColorHint="#808080"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:hint="Delivery Address"
        android:drawableLeft="@drawable/ic_delivery_address"
        android:drawablePadding="5dp"
        android:background="#ffffff"
        android:textColorHint="#808080"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:inputType="numberPassword"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dp"
        android:hint="Password (Min 4 characters)"
        android:background="#ffffff"
        android:textColorHint="#808080"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/txtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dp"
        android:layout_margin="10dp"
        android:inputType="numberPassword"
        android:padding="5dp"
        android:hint="Confirm Password"
        android:background="#ffffff"
        android:textColorHint="#808080"
        android:textColor="#000000"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="#fb4c0d"
        android:text="Register"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>


</LinearLayout>